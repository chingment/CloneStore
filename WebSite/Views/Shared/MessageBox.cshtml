@model WebSite.Models.MessageBoxModel
@{
    ViewBag.Title = "MessageBox";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";

}

@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $.lumos.messageBox({ type: "@Model.Type", isPopup: false, title: "@Model.Title", content: "@Model.Content" })
        });
    </script>
}
