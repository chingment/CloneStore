@model WebSite.Models.Account.MyCartViewModel
@{
    ViewBag.Title = "MyCart";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}
@section styles{
    <style type="text/css">
        .owl-item {
            /*height:100px;*/
        }

        .owl_cart_pants li {
            height: 103px;
        }
    </style>
}
@section scriptsbyend{
    <script src="~/Scripts/owl.carousel.js"></script>
    <script src="~/Scripts/jquery.mouseoverbox.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {

            //$("#owl_cart_shoes .item   span,#owl_cart_shirt .item   span,#owl_cart_pants .item   span ").each(function () {

            //    var ihtml = '';
            //    ihtml += '  <div style="border: 1px solid rgb(0, 0, 0); border-image: none; width: 146px; height: 146px; margin-right: 10px; float: left;">';

            //    ihtml += '?';

            //    ihtml += ' </div>';

            //    $(this).mouseOverTip({
            //        width: '150px',
            //        height: '150px',
            //        outlineBoxId: "mycart_box",
            //        boxId: "savedproduct_box_xiuTipBox",
            //        content: ihtml
            //    });
            //});


            $('#owl_cart_shirt').owlCarousel({
                items: 7,
                navigation: true,
                rewindNav: false,
                itemsDesktop: [1199, 7],
                itemsDesktopSmall: [979, 7],
                itemsTablet: [768, 7],
                itemsMobile: [479, 7],
                navigationText: ["", ""]
            });


            $('#owl_cart_shoes').owlCarousel({
                items: 7,
                navigation: true,
                rewindNav: false,
                itemsDesktop: [1199, 7],
                itemsDesktopSmall: [979, 7],
                itemsTablet: [768, 7],
                itemsMobile: [479, 7],
                navigationText: ["", ""]
            });

            $('#owl_cart_pants').owlCarousel({
                items: 2,
                navigation: true,
                rewindNav: false,
                itemsDesktop: [1199, 2],
                itemsDesktopSmall: [979, 2],
                itemsTablet: [768, 2],
                itemsMobile: [479, 2],
                navigationText: ["", ""]
            });


            $("#owl_cart_shirt .item  span img").live('click', function (i) {
                var src = $(this).attr("src");
                $("#gallary_shirt_img").attr("src", src);
            });

            $("#owl_cart_shoes .item  span img").live('click', function (i) {
                var src = $(this).attr("src");
                $("#gallary_shoes_img").attr("src", src);
            });

            $("#owl_cart_pants .item  span img").live('click', function (i) {
                var src = $(this).attr("src");
                $("#gallary_pants_img").attr("src", src);
            });

        });
    </script>

}
<div class="gbr gbr-mycart">
    <div class="wrapper">
        <div class="content clearfix">
            <div class="left">
                <div class="wrapper">
                    <div class="content clearfix mycart-box" id="mycart_box">
                        <!-- cart-shirt-box -->
                        <div class="cart-shirt-box cart-top" id="cart_shirt_box">
                            <div class="cart-shirt-box-content">
                                <div id="owl_cart_shirt" class="owl-carousel owl-cart-shirt">
                                    @for (var i = 0; i < Model.Clothes.Count; i++)
                                    {
                                        <a class="item" id="">
                                            <span id="cartproduct_@Model.Clothes[i].Id">
                                                <img src="@Model.Clothes[i].SmallImg" alt="">
                                            </span>
                                        </a>
                                    }
                                </div>
                                <div class="cart-box-null" style="margin-top:10px;">
                                    <div class="cart-box-null-img">

                                    </div>
                                    <p class="cart-box-null-text">choice <a href="/Product/List/0/Clothes">clothes</a> into the cart </p>
                                </div>
                            </div>
                        </div>
                        <!-- cart-shirt-box end -->
                        <div class="cart-middle">
                            <div class="cart-gallary-box" id="cart_gallary_box">
                                <div class="gallary-pants-box gallary-item">
                                    <span></span>
                                    <img id="gallary_pants_img" src="/images/gallary-pants.png" style="width: 160px; vertical-align: middle">
                                </div>
                                <div class="gallary-shirt-box gallary-item">
                                    <span></span>
                                    <img id="gallary_shirt_img" src="/images/gallary-shirt.png" alt="" style="width: 160px; vertical-align: middle">
                                </div>
                                <div class="gallary-shoes-box gallary-item">
                                    <span></span>
                                    <img id="gallary_shoes_img" src="/images/gallary_shoes.png" alt="" style="width: 160px; vertical-align: middle">
                                </div>
                            </div>
                            <!-- cart-pants-box -->
                            <div class="cart-pants-box">
                                <div class="cart-pants-box-content">
                                    <div id="owl_cart_pants" class="owl-carousel owl_cart_pants">
                                        @for (var i = 0; i < Model.Pants.Count; i = i + 3)
                                        {
                                            <a class="item">
                                                <ul>
                                                    <li style="margin-bottom: 5px;">
                                                        @if (i < Model.Pants.Count)
                                                        {
                                                            <span id="product_@Model.Pants[i].Id">
                                                                <pre style="display:none">@Newtonsoft.Json.JsonConvert.SerializeObject(Model.Pants[i])</pre>
                                                                <img src="@Model.Pants[i].SmallImg" alt="">
                                                            </span>
                                                        }
                                                    </li>
                                                    <li>
                                                        @if ((i + 1) < Model.Pants.Count)
                                                        {
                                                            <span id="product_@Model.Pants[i+1].Id">
                                                                <pre style="display:none">@Newtonsoft.Json.JsonConvert.SerializeObject(Model.Pants[i + 1])</pre>
                                                                <img src="@Model.Pants[i + 1].SmallImg" alt="">
                                                            </span>
                                                        }
                                                    </li>
                                                    <li>
                                                        @if ((i + 2) < Model.Pants.Count)
                                                        {
                                                            <span id="product_@Model.Pants[i+2].Id">
                                                                <pre style="display:none">@Newtonsoft.Json.JsonConvert.SerializeObject(Model.Pants[i + 2])</pre>
                                                                <img src="@Model.Pants[i + 2].SmallImg" alt="">
                                                            </span>
                                                        }
                                                    </li>
                                                </ul>
                                            </a>
                                        }
                                    </div>
                                    <div class="cart-box-null" style="margin-top:114px;width:200px;">
                                        <div class="cart-box-null-img">

                                        </div>
                                        <p class="cart-box-null-text">choice <a href="/Product/List/0/Pants">pants</a> into the cart </p>
                                    </div>
                                </div>
                            </div>
                            <!-- cart-pants-box -->
                        </div>
                        <!-- cart-shoes-box -->
                        <div class="cart-shoes-box cart-bottom" id="cart_shoes_box">
                            <div class="cart-shoes-box-content">
                                <div id="owl_cart_shoes" class="owl-carousel owl-cart-shoes">
                                    @for (var i = 0; i < Model.Shoes.Count; i++)
                                    {
                                        <a class="item" id="">
                                            <span id="cartproduct_@Model.Shoes[i].Id">
                                                <img src="@Model.Shoes[i].SmallImg" alt="">
                                            </span>
                                        </a>
                                    }
                                </div>
                                <div class="cart-box-null" style="margin-top:10px;">
                                    <div class="cart-box-null-img">

                                    </div>
                                    <p class="cart-box-null-text">choice <a href="/Product/List/0/Shoes">shoes</a> into the cart </p>
                                </div>
                            </div>
                        </div>
                        <!-- cart-shoes-box end -->

                    </div>
                </div>
            </div>
            <div class="right">
                <div class="wrapper">
                    <div class="content clearfix">
                        <div class="retailers-box" style="height:550px;">
                            <span class="title">Retailers</span>
                            <ul class="options">
                                @for (int i = 0; i < Model.Retailers.Count; i++)
                                {
                                    <li><a href="/Product/List/@Model.Retailers[i].Id/0">@Model.Retailers[i].Name</a> </li>
                                }
                            </ul>
                        </div>
                        <div>
                            <span style="height: 30px; text-align: center; line-height: 30px; display: block;"><a class="a-btn" style="padding: 6px 8px; font-size: 12px;" href="/Product/List">Go Store</a></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
